extends layout

block content
  h1= title 
    br 
    a.button(href='/books/new') Create New Book  
    a.button(id='show-all-books' href='/books/page/1') All Books

  if books.length > 0    
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}
  else
    p No results found